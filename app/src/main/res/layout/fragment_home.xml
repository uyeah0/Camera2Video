<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    tools:context=".fragment_home"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="#000"
        android:text="세상은 고통으로 가득하지만, \n그것을 극복하는 사람들로도 가득하다."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="@font/notosans_regular"
        android:textColor="#000"
        android:text="-헬렌 켈러-" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="#000"
        android:textSize="60px"
        android:text="Today's study" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/round_square"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="right"
            android:text="3h\n26m"
            android:textColor="@color/black"
            android:textSize="145px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="bottom|right"
            android:fontFamily="@font/notosans_bold"
            android:textSize="100px"
            android:textColor="@color/black"
            android:text="D-13" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:src="@drawable/home_cracker_icon"
            android:contentDescription="TODO" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-10dp"
        android:orientation="vertical"
        android:background="@drawable/gray_round_square">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:layout_centerHorizontal="true"
            android:buttonTint="@color/light_gray"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/dark_gray"
            android:text="ToDo list" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:buttonTint="@color/light_gray"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/dark_gray"
            android:text="ToDo List"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_round_square"
        android:text="memo"
        android:gravity="center"
        android:textColor="@color/dark_gray"/>
</LinearLayout>
